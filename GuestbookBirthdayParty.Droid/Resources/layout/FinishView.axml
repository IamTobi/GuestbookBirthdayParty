<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:local="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#400000"
    android:gravity="center">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <TextView
            android:text="Take a picture"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="40dp"
            android:id="@+id/textView1" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <Button
                android:text="send"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                local:MvxBind="Click SendClickedCommand,CommandParameter=send"
                android:id="@+id/firstAnswer" />
            <Button
                android:text="take the picture"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                local:MvxBind="Click AnswerClickedCommand,CommandParameter=second"
                android:id="@+id/secondAnswer" />
        </LinearLayout>
        <Mvx.MvxListView
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            local:MvxBind="ItemsSource AnswerList" />
    </LinearLayout>
</RelativeLayout>