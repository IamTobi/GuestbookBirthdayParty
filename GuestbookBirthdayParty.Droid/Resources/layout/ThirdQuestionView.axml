<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:local="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#000040"
    android:gravity="center">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <TextView
            android:text="Third question here"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="40dp"
            android:id="@+id/textView1" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <Button
                android:text="first"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                local:MvxBind="Click AnswerClickedCommand,CommandParameter=first"
                android:id="@+id/firstAnswer" />
            <Button
                android:text="second"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                local:MvxBind="Click AnswerClickedCommand,CommandParameter=second"
                android:id="@+id/secondAnswer" />
            <Button
                android:text="third"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                local:MvxBind="Click AnswerClickedCommand,CommandParameter=third"
                android:id="@+id/thirdAnswer" />
            <Button
                android:text="fourth"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                local:MvxBind="Click AnswerClickedCommand,CommandParameter=fourth"
                android:id="@+id/fourthAnswer" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>